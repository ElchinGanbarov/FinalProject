@model ResetPasswordConfirmViewModel

@{
    ViewData["Title"] = "ResetPassword";
}

    <body class="authentication-page">

        <!-- Main Layout Start -->
        <div class="main-layout card-bg-1">
            <div class="container d-flex flex-column">
                <div class="row no-gutters text-center align-items-center justify-content-center min-vh-100">
                    <div class="col-12 col-md-6 col-lg-5 col-xl-4">
                        <h1 class="font-weight-bold">Update password</h1>
                        <p class="text-dark mb-3">Enter your new password</p>
                        <form class="mb-3" method="post">

                            <div class="form-group" style="text-align:left !important">
                                <label asp-for="Password" class="sr-only">New password</label>
                                <input asp-for="Password" class="form-control form-control-md" placeholder="Enter new password">
                                <span asp-validation-for="Password" class="text-danger"></span>
                            </div>
                            <div class="form-group" style="text-align:left !important">
                                <label asp-for="PasswordConfirm" class="sr-only">Confirm password</label>
                                <input asp-for="PasswordConfirm" class="form-control form-control-md" placeholder="Confirm new password">
                                <span asp-validation-for="PasswordConfirm" class="text-danger"></span>
                            </div>

                            <button class="btn btn-lg btn-block btn-primary  text-uppercase font-weight-semibold" type="submit">Submit</button>
                        </form>

                        <p>Already have an account? <a class="font-weight-semibold" asp-controller="account" asp-action="signin">Sign in</a>.</p>
                    </div>
                </div>
            </div>
        </div>
        <!-- Main Layout End -->
        <!-- Javascript Files -->
        <script src="~/vendors/jquery/jquery-3.5.0.min.js"></script>
        <script src="~/vendors/bootstrap/bootstrap.bundle.min.js"></script>
        <script src="~/vendors/magnific-popup/jquery.magnific-popup.min.js"></script>
        <script src="~/vendors/svg-inject/svg-inject.min.js"></script>
        <script src="~/vendors/modal-stepes/modal-steps.min.js"></script>
        <script src="~/lib/jquery-toast-plugin/jquery.toast.min.js"></script>
        <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
        <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
    </body>

